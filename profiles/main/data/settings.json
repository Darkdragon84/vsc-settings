{
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[markdown]": {
        "diffEditor.ignoreTrimWhitespace": true
    },
    "[python]": {
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true
    },
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        "editor.formatOnSave": true
    },
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "ansible.lightspeed.suggestions.enabled": false,
    "autoDocstring.docstringFormat": "google-notypes",
    "autoDocstring.startOnNewLine": true,
    "basedpyright.analysis.inlayHints.callArgumentNames": false,
    "basedpyright.analysis.inlayHints.functionReturnTypes": true,
    "basedpyright.analysis.inlayHints.genericTypes": true,
    "cSpell.languageSettings": [
        {
            "languageId": "markdown"
        },
        {
            "ignoreRegExpList": [
                "markdownInlineCode",
                "docTest",
                "reStructureParam"
            ],
            "includeRegExpList": [
                "pythonDocstring",
                "comments"
            ],
            "languageId": "python",
            "patterns": [
                {
                    "name": "markdownInlineCode",
                    "pattern": "/`[^`]*`/gi"
                },
                {
                    "name": "docTest",
                    "pattern": "/>>>.*/gi"
                },
                {
                    "name": "reStructureParam",
                    "pattern": "/:(param|return) [^:]*:/gi"
                },
            ]
        }
    ],
    "cSpell.userWords": [
        "Rennweg",
        "qubit",
        "qubits",
        "OpenQASM",
        "cnot",
        "plaquette",
        "plaquettes",
        "eigenstate",
        "eigenstates",
        "Qiskit",
        "clbit",
        "clbits",
        "cbit",
        "cbits"
    ],
    "debug.allowBreakpointsEverywhere": true,
    "debugpy.debugJustMyCode": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.accessibilitySupport": "off",
    "editor.minimap.enabled": false,
    "editor.rulers": [
        100
    ],
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "extensions.ignoreRecommendations": true,
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/*.egg-info": true,
        "**/.idea": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
        "**/__pycache__": true
    },
    "files.insertFinalNewline": true,
    "files.associations": {
        "*.template.yml": "jinja-yaml"
    },
    "ansible.validation.enabled": true,
    "ansible.validation.lint.enabled": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.mergeEditor": true,
    "git.openDiffOnClick": true,
    "git.openRepositoryInParentFolders": "never",
    "git.replaceTagsWhenPull": true,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.views.commitDetails.files.layout": "tree",
    "gitlens.views.scm.grouped.views": {
        "branches": true,
        "commits": true,
        "contributors": true,
        "launchpad": true,
        "remotes": true,
        "repositories": false,
        "searchAndCompare": false,
        "stashes": true,
        "tags": true,
        "worktrees": true
    },
    "interactiveWindow.executeWithShiftEnter": false,
    "julia.enableTelemetry": false,
    "julia.symbolCacheDownload": true,
    "launch": {
        "configurations": [
            {
                "console": "integratedTerminal",
                "justMyCode": false,
                "name": "Python Debugger: Current File",
                "program": "${file}",
                "request": "launch",
                "type": "debugpy"
            },
            {
                "console": "integratedTerminal",
                "justMyCode": false,
                "module": "${command:extension.commandvariable.file.relativeFileDotsNoExtension}",
                "name": "Python Debugger: Current Module",
                "request": "launch",
                "type": "debugpy"
            }
        ],
        "version": "0.2.0"
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "right"
    },
    "python.REPL.sendToNativeREPL": true,
    "python.languageServer": "None",
    "python.terminal.executeInFileDir": false,
    "python.testing.pytestEnabled": true,
    // "python.testing.pytestArgs": [
    //     "-vv",
    //     "-s",
    //     "--no-cov"
    // ],
    "redhat.telemetry.enabled": false,
    "ruff.configurationPreference": "filesystemFirst",
    "ruff.importStrategy": "fromEnvironment",
    "ruff.lineLength": 100,
    "rust-analyzer.check.command": "clippy",
    "search.useGlobalIgnoreFiles": true,
    "security.workspace.trust.untrustedFiles": "open",
    "syncSettings.crons": {
        "download": "0 10 * * *", // at 10AM, every day
        "review": "0 * * * *" // every hour
    },
    "syncSettings.keybindingsPerPlatform": true,
    "syncSettings.resources": [
        "extensions",
        "keybindings",
        "settings",
        "snippets"
    ],
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.sendKeybindingsToShell": true,
    "todo-tree.regex.regex": "(//+|#+|<!--|;|/*)\\s*($TAGS)",
    "workbench.colorTheme": "Default Dark+",
    "workbench.editor.enablePreview": false,
    "workbench.startupEditor": "none",
    "yaml.customTags": [
        "!reference sequence"
    ]
}
